{
	"manifest_version": 2,
	"name": "Opener Detector",
	"version": "0.1",

	"description": "Checks for window.opener vulnerabilities as you browse.",

	"icons": {
		"48": "icons/icon.png",
		"96": "icons/icon@2x.png"
	},

	"permissions": ["storage"],

	"options_ui": {
		"page": "options.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"ignore_list.js",
				"check.js"
			]
		}
	]
}
